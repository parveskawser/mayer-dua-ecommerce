@model List<MDUA.Entities.Customer>
@{
    ViewData["Title"] = "Customer List";
    Layout = "_AdminLayout"; // Assuming Admin layout
}

<h2 class="fw-bold mb-3">Customer Database</h2>
<div class="text-muted small mb-4">Total Customers: @(Model?.Count() ?? 0)</div>

<div class="glass-card h-100 d-flex flex-column">
    <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle products-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Id</td>
                            <td>@c.CustomerName</td>
                            <td>@c.Email</td>
                            <td>@c.Phone</td>
                            <td><span class="badge @(c.IsActive ? "bg-success-subtle text-success" : "bg-danger-subtle text-danger")">@(c.IsActive ? "Active" : "Inactive")</span></td>
                            <td class="small text-muted">@c.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td class="text-end">
                                <div class="d-flex gap-2 justify-content-end">

                                    <button type="button"
                                            class="btn btn-sm btn-outline-info js-view-details"
                                            title="View Details"
                                            data-id="@c.Id"
                                            data-name="@c.CustomerName"
                                            data-bs-toggle="modal"
                                            data-bs-target="#dataModal">
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12" y2="8"></line></svg>
                                    </button>

                                    <!-- Orders Button (Now a Modal Trigger) -->
                                    <button type="button"
                                            class="btn btn-sm btn-outline-secondary js-manage-orders"
                                            title="View Orders"
                                            data-id="@c.Id"
                                            data-name="@c.CustomerName"
                                            data-bs-toggle="modal"
                                            data-bs-target="#dataModal">
                                        🛒
                                    </button>

                                    <!-- Addresses Button (Now a Modal Trigger) -->
                                    <button type="button"
                                            class="btn btn-sm btn-outline-secondary js-manage-addresses"
                                            title="View Addresses"
                                            data-id="@c.Id"
                                            data-name="@c.CustomerName"
                                            data-bs-toggle="modal"
                                            data-bs-target="#dataModal">
                                        🏠
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="7" class="text-center p-4 text-muted">No customers found.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Generic Modal for Details, Addresses, and Orders -->
<div class="modal fade" id="dataModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content modal-custom">
            <div class="modal-header">
                <h5 class="modal-title" id="dataModalTitle">Customer Data</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="dataModalBody">
                <div class="loading-spinner text-center py-4">Loading...</div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/customer-list.js"></script>
