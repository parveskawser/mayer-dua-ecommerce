@{
    Layout = null;
    ViewData["Title"] = "Find Account";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Find Account - MDUA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .auth-card {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.4);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 420px;
            overflow: hidden;
        }

        .icon-header {
            background: linear-gradient(45deg, #0d6efd, #0dcaf0);
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 0 0 50% 50% / 20px;
            margin-bottom: 2rem;
        }

            .icon-header.warning {
                background: linear-gradient(45deg, #ffc107, #fd7e14);
            }
        /* Orange for Warning */
        .icon-circle {
            background: rgba(255, 255, 255, 0.2);
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(5px);
        }

        .form-control-glass {
            background: #f8f9fa;
            border: 2px solid #e9ecef;
            padding: 12px;
            border-radius: 10px;
        }

            .form-control-glass:focus {
                background: #fff;
                border-color: #0d6efd;
                box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.1);
            }

        .btn-action {
            background: linear-gradient(90deg, #0d6efd 0%, #0056b3 100%);
            border: none;
            padding: 12px;
            border-radius: 10px;
            font-weight: 600;
            transition: transform 0.2s;
        }

            .btn-action:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(13, 110, 253, 0.3);
            }
    </style>
</head>
<body>
    <div class="auth-card pb-4">

        @if (ViewBag.ManualResetRequired == true)
        {
            /* --- STATE: NO 2FA (CONTACT ADMIN) --- */
            <div class="icon-header warning">
                <div class="icon-circle">
                    <i class="fas fa-user-lock text-white fa-2x"></i>
                </div>
            </div>
            <div class="px-4 px-md-5 text-center">
                <h3 class="fw-bold text-dark mb-2">Cannot Reset</h3>
                <p class="text-muted small mb-4">
                    Two-Factor Authentication is not enabled for this account.
                </p>

                <div class="alert alert-warning border-0 bg-warning-subtle text-warning-emphasis text-start small mb-4 shadow-sm rounded-3">
                    <div class="d-flex">
                        <i class="fas fa-info-circle mt-1 me-2 fs-5"></i>
                        <div>
                            <strong>Action Required:</strong><br />
                            Please contact your System Administrator to reset your password manually.
                        </div>
                    </div>
                </div>

                <a asp-action="LogIn" class="btn btn-primary w-100 btn-action text-white mb-3">
                    <i class="fas fa-arrow-left me-2"></i> Return to Login
                </a>
            </div>
        }
        else
        {
            /* --- STATE: NORMAL FORM --- */
            <div class="icon-header">
                <div class="icon-circle">
                    <i class="fas fa-search text-white fa-2x"></i>
                </div>
            </div>
            <div class="px-4 px-md-5">
                <h3 class="fw-bold text-center text-dark mb-2">Find Account</h3>
                <p class="text-center text-muted small mb-4">Enter your username to begin.</p>

                <form method="post" asp-action="ForgotPassword">
                    @Html.AntiForgeryToken()

                    <div class="mb-4 text-start">
                        <label class="form-label small fw-bold text-muted text-uppercase">Username</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 text-muted border-2" style="border-right:0; border-radius: 10px 0 0 10px;"><i class="fas fa-user"></i></span>
                            <input type="text" name="username" class="form-control form-control-glass border-start-0 ps-2" style="border-radius: 0 10px 10px 0;" required autocomplete="off" />
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 btn-action text-white mb-3">
                        Next Step <i class="fas fa-arrow-right ms-2 small"></i>
                    </button>
                </form>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger py-2 small rounded-3 text-center border-0 shadow-sm">
                        <i class="fas fa-times-circle me-1"></i> @ViewBag.Error
                    </div>
                }

                <div class="text-center border-top pt-3 mt-3">
                    <a asp-action="LogIn" class="text-decoration-none small text-secondary fw-bold">
                        <i class="fas fa-arrow-left me-1"></i> Back to Login
                    </a>
                </div>
            </div>
        }
    </div>
</body>
</html>