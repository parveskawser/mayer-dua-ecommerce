@model MDUA.Entities.UserLoginResult
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - MDUA Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="decorative-shape shape-1"></div>
    <div class="decorative-shape shape-2"></div>
    <div class="login-container">
        <div class="glass-card">
            <div class="brand-icon">M</div>
            <h2 class="fw-bold text-dark mb-1">Welcome Back</h2>
            <p class="text-muted mb-4 small">Enter your credentials to access the dashboard.</p>

            <form method="post" asp-controller="Account" asp-action="LogIn">
                @Html.AntiForgeryToken()

                <div class="form-group mb-3 text-start">
                    <label for="username" class="form-label small fw-bold text-uppercase text-muted ps-1">Username</label>
                    <input type="text" name="username" id="username" class="form-control form-control-glass" placeholder="Enter username" required autocomplete="username" />
                </div>

                <div class="form-group mb-3 text-start">
                    <label for="password" class="form-label small fw-bold text-uppercase text-muted ps-1">Password</label>
                    <div class="password-wrapper position-relative">
                        <input type="password" name="password" id="password" class="form-control form-control-glass" placeholder="••••••••" required autocomplete="current-password" />

                        <button type="button" class="password-toggle btn border-0 p-0 position-absolute top-50 end-0 translate-middle-y me-3"
                                id="togglePassword" style="background:transparent; z-index:5;" aria-label="Toggle password visibility">
                            <span id="eyeIcon" class="text-muted"><i class="fas fa-eye"></i></span>
                        </button>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4 ps-1 pe-1">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="rememberMe" id="rememberMe">
                        <label class="form-check-label small text-muted user-select-none" for="rememberMe">
                            Remember me
                        </label>
                    </div>

                    <a asp-action="ForgotPassword" asp-controller="Account" class="small text-decoration-none fw-bold text-primary">
                        Forgot Password?
                    </a>
                </div>

                <button type="submit" class="btn btn-login w-100">
                    Sign In
                </button>
            </form>

            @if (Model != null)
            {
                <div class="mt-4 pt-3 border-top border-secondary-subtle">
                    @if (Model.IsSuccess)
                    {
                        <div class="alert alert-success d-flex align-items-center p-2 mb-0" role="alert">
                            <span class="fs-5 me-2">✓</span>
                            <div class="small lh-sm text-start"><strong>Login Successful!</strong><br>Redirecting...</div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger d-flex align-items-center p-2 mb-0" role="alert">
                            <span class="fs-5 me-2">✕</span>
                            <div class="small lh-sm text-start"><strong>Access Denied</strong><br>@Model.ErrorMessage</div>
                        </div>
                    }
                </div>
            }
        </div>
        <div class="text-center mt-4 text-muted small opacity-75">
            &copy; @DateTime.Now.Year MDUA System
        </div>
    </div>

    <script>
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('password');
        const eyeIcon = document.getElementById('eyeIcon');

        togglePassword.addEventListener('click', function() {
            const type = passwordInput.type === 'password' ? 'text' : 'password';
            passwordInput.type = type;

            // ✅ UPDATED: Switch FontAwesome Classes
            if (type === 'password') {
                eyeIcon.innerHTML = '<i class="fas fa-eye"></i>';
            } else {
                eyeIcon.innerHTML = '<i class="fas fa-eye-slash"></i>';
            }
        });
    </script>
</body>
</html>