@{
    Layout = null;
    ViewData["Title"] = "New Password";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>New Password - MDUA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .auth-card {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.4);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 420px;
            overflow: hidden;
        }

        .icon-header {
            background: linear-gradient(45deg, #198754, #20c997); /* Green for Success/Action */
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 0 0 50% 50% / 20px;
            margin-bottom: 2rem;
        }

        .icon-circle {
            background: rgba(255, 255, 255, 0.2);
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            backdrop-filter: blur(5px);
        }

        .form-control-glass {
            background: #f8f9fa;
            border: 2px solid #e9ecef;
            padding: 12px;
            border-radius: 10px;
        }

            .form-control-glass:focus {
                background: #fff;
                border-color: #198754;
                box-shadow: 0 0 0 4px rgba(25, 135, 84, 0.1);
            }

        .btn-reset {
            background: linear-gradient(90deg, #198754 0%, #157347 100%);
            border: none;
            padding: 12px;
            border-radius: 10px;
            font-weight: 600;
            transition: transform 0.2s;
        }

            .btn-reset:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(25, 135, 84, 0.3);
            }
    </style>
</head>
<body>
    <div class="auth-card pb-4">
        <div class="icon-header">
            <div class="icon-circle">
                <i class="fas fa-lock text-white fa-2x"></i>
            </div>
        </div>
        <div class="px-4 px-md-5">
            <h3 class="fw-bold text-center text-dark mb-2">Reset Password</h3>
            <p class="text-center text-muted small mb-4">Identity verified. Please create your new password.</p>

            <form method="post" asp-action="ResetPassword">
                @Html.AntiForgeryToken()

                <div class="mb-3 text-start">
                    <label class="form-label small fw-bold text-muted text-uppercase">New Password</label>
                    <input type="password" name="newPassword" class="form-control form-control-glass" required />
                </div>

                <div class="mb-4 text-start">
                    <label class="form-label small fw-bold text-muted text-uppercase">Confirm Password</label>
                    <input type="password" name="confirmPassword" class="form-control form-control-glass" required />
                </div>

                <button type="submit" class="btn btn-primary w-100 btn-reset text-white mb-3">
                    Update Password
                </button>
            </form>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger py-2 small rounded-3 text-center border-0 shadow-sm">
                    @ViewBag.Error
                </div>
            }
        </div>
    </div>
</body>
</html>